<?php

/**
 * @file
 * APubSub module file.
 */

/**
 * Implements hook_menu().
 */
function apb_ui_menu() {
  $items = array();

  // Administration screens.
  $items['admin/content/pubsub'] = array(
    'title' => 'Pub/Sub',
    'description' => 'Manage channels and subscriptions.',
    'page callback' => 'apb_ui_content_backend_list',
    'access arguments' => array('access administration pages'),
    'file' => 'apb_ui.admin.inc',
    'type' => MENU_LOCAL_TASK,
  );

  $items['admin/content/pubsub/%apb_backend'] = array(
    'title' => 'Backend overview',
    'page callback' => 'apb_ui_content_backend_overview_page',
    'page arguments' => array(3),
    'access callback' => 'apb_ui_access',
    'access arguments' => array(3),
    'file' => 'apb_ui.admin.inc',
    'type' => MENU_CALLBACK | MENU_VISIBLE_IN_BREADCRUMB,
  );
  $items['admin/content/pubsub/%apb_backend/overview'] = array(
    'title' => 'Overview',
    'type' => MENU_DEFAULT_LOCAL_TASK,
    'weight' => -10,
  );

  $items['admin/content/pubsub/%apb_backend/channels'] = array(
    'title' => 'Channels',
    'description' => 'Manage channels and subscriptions.',
    'page callback' => 'apb_ui_content_backend_channel_list',
    'page arguments' => array(3),
    'access callback' => 'apb_ui_access',
    'access arguments' => array(3, 4),
    'file' => 'apb_ui.admin.inc',
    'type' => MENU_LOCAL_TASK,
  );
  $items['admin/content/pubsub/%apb_backend/subscriptions'] = array(
    'title' => 'Subscriptions',
    'description' => 'Manage channels and subscriptions.',
    'page callback' => 'apb_ui_content_backend_subscription_list',
    'page arguments' => array(3),
    'access callback' => 'apb_ui_access',
    'access arguments' => array(3, 4),
    'file' => 'apb_ui.admin.inc',
    'type' => MENU_LOCAL_TASK,
  );
  $items['admin/content/pubsub/%apb_backend/subscribers'] = array(
    'title' => 'Subscribers',
    'description' => 'Manage channels and subscriptions.',
    'page callback' => 'apb_ui_content_backend_subscriber_list',
    'page arguments' => array(3),
    'access callback' => 'apb_ui_access',
    'access arguments' => array(3, 4),
    'file' => 'apb_ui.admin.inc',
    'type' => MENU_LOCAL_TASK,
  );

  $items['admin/content/pubsub/%apb_backend/analysis'] = array(
    'title' => 'Run analysis',
    'page callback' => 'apb_ui_content_backend_analysis',
    'page arguments' => array(3),
    'access callback' => 'apb_ui_access',
    'access arguments' => array(3),
    'file' => 'apb_ui.admin.inc',
    'type' => MENU_LOCAL_ACTION | MENU_VISIBLE_IN_BREADCRUMB,
  );

  return $items;
}

/**
 * Menu access helper.
 *
 * @param \APubSub\BackendInterface $backend
 *   Backend referenced in the menu.
 * @param string $page
 *   Page to access.
 *
 * @return bool
 *   True for access false else.
 */
function apb_ui_access($backend = null, $page = null) {
  if (($backend instanceof \APubSub\BackendInterface) &&
      user_access('access administration pages'))
  {
    switch ($page) {

      case 'channels':
        $backend->getChannelListHelper();
        return true;

      case 'subscriptions':
        $backend->getSubscriptionListHelper();
        return true;

      case 'subscribers':
        $backend->getSubscriptionListHelper();
        return true;

      default:
        return true;
    }
  }

  return false;
}
