/**
 * Get notification manager.
 *
 * @return \Apb\Notification\NotificationManager
 */
function apb7_notification_manager_get() {
  $instance = &drupal_static(__FUNCTION__);

  if (NULL === $instance) {
    $instance = new NotificationManager(apb7_backend_get());
  }

  return $instance;
}

